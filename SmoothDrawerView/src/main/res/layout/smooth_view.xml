<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.view.smoothview.AutoSmoothView
            android:id="@+id/gallery1"
            app:orientation="1"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"/>


        <com.view.smoothview.AutoSmoothView
            android:id="@+id/gallery2"
            app:orientation="4"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"/>

        <com.view.smoothview.AutoSmoothView
            android:id="@+id/gallery3"
            app:orientation="3"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.view.smoothview.AutoSmoothView
            android:id="@+id/gallery4"
            app:orientation="2"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <com.view.smoothview.AutoSmoothView
            android:id="@+id/gallery5"
            app:orientation="1"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>


        <com.view.smoothview.AutoSmoothView
            android:id="@+id/gallery6"
            app:orientation="3"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <com.view.smoothview.AutoSmoothView
        android:id="@+id/gallery7"
        app:orientation="3"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <com.view.smoothview.AutoSmoothView
        android:id="@+id/gallery8"
        app:orientation="2"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <com.view.smoothview.AutoSmoothView
        android:id="@+id/gallery9"
        app:orientation="1"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    </LinearLayout>
</LinearLayout>